<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.example.studente.nfc.MainActivity"
    tools:showIn="@layout/activity_main">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <Button
        android:id="@+id/buttonBis"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Bisogni"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="55dp" />

    <Button
        android:id="@+id/buttonEmo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Emozioni"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonBis" />

    <Button
        android:id="@+id/buttonCibo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Cibo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonEmo" />

    <Button
        android:id="@+id/buttonTag"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Tag NFC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonCibo" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
